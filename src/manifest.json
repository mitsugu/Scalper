{
  "manifest_version": 2,
  "name": "Scalper Manager",
  "version": "0.9",
  "description": "転売業者の表示とリスト管理を行います。",
  "content_scripts":[
    {
      "matches": ["https://www.amazon.co.jp/*"],
      "js": [
        "resaler_black_list.js",
        "resaler_marker_united.js",
        "exportList.js"
      ]
    }
  ],
  "applications": {
    "gecko": {
      "id": "scalpermanager@firefox.com"
    }
  },
  "background": {
    "scripts": [
      "bgs.js"
    ]
  },
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },
  "permissions": [
    "https://www.amazon.co.jp/",
    "tabs",
    "unlimitedStorage",
    "storage",
    "menus"
  ]
}

